{
  "name": "push-all-in-cloud",
  "version": "2.2.0",
  "description": "基于 push-all-in-one 和 hono 开发的云函数推送服务。支持 nodejs/docker/vercel 等部署方式",
  "author": "CaoMeiYouRen",
  "private": true,
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "release": "semantic-release",
    "build": "rimraf dist && tsup",
    "dev": "cross-env NODE_ENV=development tsx watch --clear-screen=false src/index.ts",
    "watch": "tsc -w",
    "start": "node ./dist/index.js",
    "commit": "cz",
    "prepare": "husky install",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "dev:vercel": "vercel dev",
    "deploy:vercel": "vercel",
    "dev:cloudflare": "wrangler dev"
  },
  "devDependencies": {
    "@cao-mei-you-ren/avue-types": "^1.1.0",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cmyr-config": "^2.1.2",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog-cmyr": "^1.1.1",
    "debug": "^4.4.0",
    "eslint": "^8.50.0",
    "eslint-config-cmyr": "^1.1.31",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "semantic-release": "21.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vercel": "^39.2.0",
    "wrangler": "^3.93.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "hono": "^4.6.13",
    "push-all-in-one": "4.1.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "keywords": [
    "push",
    "docker",
    "vercel",
    "hono",
    "nodejs",
    "notifications"
  ],
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://github.com/CaoMeiYouRen/push-all-in-cloud#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/push-all-in-cloud.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/push-all-in-cloud/issues"
  },
  "type": "module",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  }
}
